{
  "name": "asap",
  "private": true,
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "dev:web": "pnpm --filter=web dev",
    "dev:core": "pnpm --filter=core dev",

    "build": "turbo run build",
    "build:web": "turbo run build --filter=web",
    "build:core": "turbo run build --filter=core",

    "lint": "turbo run lint",
 
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",

    "db:generate": "cd packages/database && npm run db:generate",
    "db:push": "cd packages/database && npm run db:push",
    "db:migrate": "cd packages/database && npm run db:migrate",
    "db:studio": "cd packages/database && npm run db:studio",
    "db:seed": "cd packages/database && npm run db:seed",
    "prisma:format": "cd packages/database && npx prisma format"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
